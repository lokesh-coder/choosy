{
  "branch": "master",
  "plugins": [
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "npm run archive:app -- ${nextRelease.version} && chmod a+x ./scripts/version.sh && ./scripts/version.sh ${nextRelease.version} && cp -r ./README.md ./dist/choosy && npx json -I -f package.json -e 'this.version=\"${nextRelease.version}\"'",
        "successCmd": "npm run postpublish -- ${nextRelease.version}"
      }
    ],
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "breaking": true, "release": "major" },
          { "revert": true, "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" }
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist/choosy",
        "pkgRoot": "dist/choosy"
      }
    ],
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["projects/choosy/package.json", "package.json", "package-lock.json", "CHANGELOG.md", "docs/environments/version.ts", "docs/assets/archived-versions.json"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ],
  "preset": "angular"
}
